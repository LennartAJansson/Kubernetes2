{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Containers.Common.HealthCheck": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Verbose",
      "Override": {
        "Microsoft": "Verbose",
        "System": "Verbose"
      }
    },
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithProcessId", "WithThreadId" ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:HH:mm:ss}|{ProcessId}|{ThreadId:00}|{Level:u3}: ({SourceContext}) {Message}{NewLine}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "/data/logs/log-.txt",
          "rollingInterval": "Day"
        }
      }
    ]
  },
  "HealthChecks": [
    {
      "Title": "HTTP_01",
      "Host": "https://www.google.com",
      "HealthyRoundtripTime": 3000,
      "Active": true
    },
    {
      "Title": "HTTP_02",
      "Host": "https://www.microsoft.com",
      "HealthyRoundtripTime": 3000,
      "Active": true
    },
    {
      "Title": "HTTP_03",
      "Host": "http://192.168.1.1",
      "HealthyRoundtripTime": 3000,
      "Active": true
    },
    {
      "Title": "DB_01",
      //TODO Find a way to obfuscate this
      "Host": "Server=mysql.mysql.svc;Port=3307;User=root;Password=password;Database=buildversionsdata",
      "HealthyRoundtripTime": 3000,
      "Active": true
    }
  ],
  "AllowedHosts": "*"
}
